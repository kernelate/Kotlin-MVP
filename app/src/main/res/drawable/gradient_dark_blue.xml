<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape  >
            <solid android:color="@color/green"/>
            <corners
                android:radius="7dp"/>
            <gradient
                android:angle="90"
                android:startColor="#3e4374"
                android:endColor="#575c85"
                android:type="linear" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="@color/green"/>
            <corners
                android:radius="7dp"/>
            <gradient
                android:angle="90"
                android:startColor="#3e4374"
                android:endColor="#575c85"
                android:type="linear" />
        </shape>
    </item>

    <item android:state_focused="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="@color/red"/>
            <corners
                android:radius="7dp"/>
            <gradient
                android:angle="90"
                android:startColor="#3e4374"
                android:endColor="#575c85"
                android:type="linear" />
        </shape>
    </item>

    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <solid android:color="@color/red"/>
            <corners
                android:radius="7dp"
                />
            <gradient
                android:angle="90"
                android:startColor="#3e4374"
                android:endColor="#575c85"
                android:type="linear" />
        </shape>
    </item>

</selector>