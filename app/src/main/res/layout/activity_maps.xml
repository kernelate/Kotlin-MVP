<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".util.map.MapsActivity" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="@dimen/mg_70"
        android:layout_height="@dimen/mg_30"
        android:text="cancel"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/mg_20"
        android:layout_marginTop="@dimen/mg_50"
        android:background="@drawable/oval_button"
        />


    <Button
        android:id="@+id/save"
        android:layout_width="@dimen/mg_70"
        android:layout_height="@dimen/mg_30"
        android:layout_alignParentRight="true"
        android:text="confirm"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/mg_50"
        android:layout_marginRight="@dimen/mg_20"
        android:background="@drawable/oval_button"
        />

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_circle"
        android:layout_centerInParent="true"
        />

</RelativeLayout>