<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_child_scene"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/child_scene2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_scene1"
            android:text="status"
            android:padding="@dimen/mg_5"
            android:visibility="gone"
            android:layout_toRightOf="@+id/icon"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />


        <ImageView
            android:id="@+id/scene_device_icon"
            android:layout_width="@dimen/mg_50"
            android:layout_height="@dimen/mg_50"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/mg_10"
            android:src="@drawable/ic_right_arrow_circular" />

        <TextView
            android:id="@+id/child_scene1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Marshmallow"
            android:textSize="@dimen/mg_14"
            android:padding="@dimen/mg_5"
            android:layout_marginLeft="@dimen/mg_10"
            android:layout_toRightOf="@+id/icon"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />
    </LinearLayout>



</RelativeLayout>
