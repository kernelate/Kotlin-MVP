
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/child_relative1"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/round_corner"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/child_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Marshmallow"
            android:textSize="@dimen/mg_14"
            android:padding="@dimen/mg_5"
            android:layout_toRightOf="@+id/icon"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/child_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_name1"
            android:text="status"
            android:padding="@dimen/mg_5"
            android:layout_toRightOf="@+id/icon"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />



        <ImageView
            android:id="@+id/device_icon"
            android:layout_width="@dimen/mg_50"
            android:layout_height="@dimen/mg_50"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/mg_40"
            />
    </RelativeLayout>



</RelativeLayout>
