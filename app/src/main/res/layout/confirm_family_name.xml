<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/family_add_family_name"
        android:textStyle="bold"
        android:textSize="@dimen/mg_20"
        android:layout_marginTop="@dimen/mg_10"
        android:layout_marginBottom="@dimen/mg_10"
        android:gravity="center_horizontal"
        />

    <EditText
        android:id="@+id/et_rename_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="?android:attr/dividerVertical"
            android:layout_alignParentTop="true"/>


        <Button
            android:id="@+id/btn_confirm_family"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/Confirm"

            android:layout_toRightOf="@id/ViewColorPickerHelper"/>
    </RelativeLayout>

</LinearLayout>