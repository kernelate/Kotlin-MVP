<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mg_130"
    app:cardCornerRadius="8dp"
    android:layout_margin="@dimen/mg_5"
    >

    <RelativeLayout
        android:id="@+id/rl_editname_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_automation_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_right_arrow"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/tv_automation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mg_10"

            android:text="@string/edit_name"
            android:textColor="@color/white"
            android:textSize="@dimen/mg_20" />

        <Switch
            android:id="@+id/switch_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mg_20"
            android:layout_marginBottom="@dimen/mg_10"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>