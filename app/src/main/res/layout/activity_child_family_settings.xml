<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/member_child_relative1"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/member_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/nav_profile2"
            android:background="@drawable/bg_bt_circle"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/mg_10"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/mg_5"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="family2"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/mg_15" />

            <TextView
                android:id="@+id/member_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:text="sakmal2sakmal2@gmail.com"
                android:textColor="@color/gray_99"
                android:textSize="@dimen/mg_12"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/member_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/mg_5"
            android:textSize="@dimen/mg_14"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_right_arrow_circular"
            android:layout_gravity="center_vertical"

            />


    </LinearLayout>
</RelativeLayout>